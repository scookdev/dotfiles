#     awk '{print $1}' | \
#     egrep -v -f /dev/fd/0 <(git branch -vv | grep origin) | \
#     awk '{print $1}' | xargs git branch -D
# }


gclone() { git clone git@github.com:$1/$2.git && cd $(basename $2); }

todo() { ghi open -m "${*}" --claim }

